@model Hotel.Web.Models.RoomModel

@{
    ViewBag.Title = "Edit Room";
}

<h2 class="h2 mg-bot-3 text-center">Room No @Model.RoomName</h2>

<div class="container-fluid h-100">
    <div class="row align-items-center h-100">
        <div class="col-sm-12">
            <div class="row justify-content-center">
                <div class="col-4 text-center">
                    @using (Html.BeginForm())
                    {
                        @Html.LabelFor(model => model.RoomName)
                        @Html.EditorFor(model => model.RoomName,
                       new
                       {
                           htmlattributes = new
                           {
                               @class = "form-styling",
                               required = "required"
                           }
                       })
                    <label class="select">
                        @Html.LabelFor(model => model.RoomCategory)
                        @Html.DropDownListFor(model => model.RoomCategory.PriceCategoryID, (SelectList)ViewBag.PriceCategories,
                       new { htmlattributes = new { required = "required" } })
                    </label>
                        <div class="form-group">
                            <input type="submit" action="Edit" class="btn btn-primary" value="Edit" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
