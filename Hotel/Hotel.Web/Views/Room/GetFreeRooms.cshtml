@model List<Hotel.Web.Models.RoomModel>

@{
    ViewBag.Title = "Free Rooms";
}


<h2 class="h2 mg-bot-3 text-center">List of free rooms</h2>

<div class="container-fluid h-100">
    <div class="row align-items-center h-100">
        <div class="col-sm-12">
            <div class="row justify-content-center">
                <div class="col-4 text-center">
                    <div class="form-group">
                        @Html.Label("Arrival Date")
                        @if (ViewBag.ArrivalDate != null)
                        {
                            @Html.Raw(ViewBag.ArrivalDate.ToString("yyyy-MM-dd"))
                        }
                    </div>
                    <div class="form-group">
                        @Html.Label("Departure Date")
                        @if (ViewBag.DepartureDate != null)
                        {
                            @Html.Raw(ViewBag.DepartureDate.ToString("yyyy-MM-dd"))
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.LabelFor(model => model[0].RoomName)
            </th>
            <th>
                @Html.LabelFor(model => model[0].RoomCategory.CategoryName.CategoryName)
            </th>
            <th>
                @Html.LabelFor(model => model[0].RoomCategory.Price)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>
                    @Html.Raw(room.RoomName)
                </td>
                <td>
                    @Html.Raw(room.RoomCategory.CategoryName.CategoryName)
                </td>
                <td>
                    @Html.Raw(room.RoomCategory.Price)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new
                    {
                        id = room.RoomID
                    })
                </td>
            </tr>
        }
    </tbody>
</table>