@model Hotel.Web.Models.RegisterUserModel
@{
    ViewBag.Title = "Sign Up";
}

<h2 class="h2 text-center">Sign Up</h2>

<div class="container-fluid h-100">
    <div class="row align-items-center h-100">
        <div class="col-sm-12">
            <div class="row justify-content-center">
                <div class="col-4 text-center">
                    @using (Html.BeginForm("Register", "User",
                        new { ReturnUrl = ViewBag.ReturnUrl },
                        FormMethod.Post, new { @class = "form-sign" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.LabelFor(model => model.Surname)
                        @Html.EditorFor(model => model.Surname,
                        new
                             {
                                 htmlattributes = new
                        {
                            @class = "form-styling",
                            required = "required"
                        }
                             })
                        @Html.LabelFor(model => model.Name)
                        @Html.EditorFor(model => model.Name,
                        new
                             {
                                 htmlattributes = new
                        {
                            @class = "form-styling",
                            required = "required"
                        }
                             })
                        @Html.LabelFor(model => model.Login)
                        @Html.EditorFor(model => model.Login,
                        new
                             {
                                 htmlattributes = new
                        {
                            @class = "form-styling",
                            required = "required"
                        }
                             })
                        @Html.LabelFor(model => model.Password)
                        @Html.EditorFor(model => model.Password,
                        new
                             {
                                 htmlattributes = new
                                 {
                            @class = "form-styling",
                            required = "required"
                                 }
                             })
                        @Html.LabelFor(model => model.RepeatPassword)
                        @Html.EditorFor(model => model.RepeatPassword,
                        new
                             {
                                 htmlattributes = new
                                 {
                            @class = "form-styling",
                            required = "required"
                                 }
                             })
                        <div class="form-group validation">
                            @Html.ValidationSummary(true)
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn-width btn btn-primary" value="Sign Up" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>




