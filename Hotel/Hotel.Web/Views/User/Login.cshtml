@model Hotel.Web.Models.UserModel
@{
    ViewBag.Title = "Login";
}
<h2 class="h2 text-center">Login</h2>

<div class="container-fluid h-100">
    <div class="row align-items-center h-100">
        <div class="col-sm-12">
            <div class="row justify-content-center">
                <div class="col-4 text-center">
                    @using (Html.BeginForm("Login", "User",
                        new { ReturnUrl = ViewBag.ReturnUrl },
                        FormMethod.Post, new { @class = "form-sign" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.LabelFor(model => model.Login)
                        @Html.EditorFor(model => model.Login,
                        new
                             {
                                 htmlattributes = new
                        {
                            @class = "form-styling",
                            required = "required"
                        }
                             })
                        @Html.LabelFor(model => model.Password)
                        @Html.EditorFor(model => model.Password,
                        new
                             {
                                 htmlattributes = new
                                 {
                            @class = "form-styling",
                            required = "required"
                                 }
                             })
                        <div class="form-group validation">
                            @Html.ValidationSummary(true)
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn-width btn btn-primary" value="Login" />
                        </div>
                    }
                    @Html.ActionLink("Sign Up", "Register", routeValues: null, htmlAttributes: new[] { "btn" })
                </div>
            </div>
        </div>
    </div>
</div>


