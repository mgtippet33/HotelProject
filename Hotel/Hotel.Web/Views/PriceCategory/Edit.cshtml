@model Hotel.Web.Models.PriceCategoryModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@Html.ValidationSummary(true)
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName.CategoryName)
            @Html.DropDownListFor(model => model.CategoryName.CategoryID, (SelectList)ViewBag.Categories)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Price)
            @Html.EditorFor(model => model.Price)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.StartDate)
            <input type="datetime-local" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-ddThh:mm")"/>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EndDate)
            <input type="datetime-local" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-ddThh:mm")"/>
        </div>
        <div class="form-group">
            <input type="submit" action="Edit" class="btn" value="Edit" />
        </div>
    </div>
}