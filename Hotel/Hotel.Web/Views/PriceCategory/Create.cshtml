@model Hotel.Web.Models.PriceCategoryModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@Html.ValidationSummary(true)
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName.CategoryName)
            @Html.DropDownListFor(model => model.CategoryName.CategoryID, (SelectList)ViewBag.Categories)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Price)
            @Html.EditorFor(model => model.Price)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.StartDate)
            <input type="datetime-local" name="StartDate" />
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EndDate)
            <input type="datetime-local" name="EndDate" />
        </div>
        <div class="form-group">
            <input type="submit" action="Create" class="btn" value="Create" />
        </div>
    </div>
}