@model Hotel.Web.Models.ReservationModel
@{
    ViewBag.Title = "Edit Reservation";
}

<h2 class="h2 mg-bot-3 text-center">Reservation No @Model.ReservationID</h2>

<div class="container-fluid h-100">
    <div class="row align-items-center h-100">
        <div class="col-sm-12">
            <div class="row justify-content-center">
                <div class="col-4 text-center">
                    @using (Html.BeginForm())
                    {
                        @Html.Label("Full Name")
                        <label class="select">
                            @Html.DropDownListFor(model => model.ClientResevation.ClientID, (SelectList)ViewBag.Clients,
                           new { htmlattributes = new { required = "required" } })
                        </label>
                        @Html.LabelFor(model => model.RoomReservation.RoomName)
                <label class="select">
                    @Html.DropDownListFor(model => model.RoomReservation.RoomID, (SelectList)ViewBag.Rooms,
                    new { htmlattributes = new { required = "required" } })
                </label>

                        <div class="input-group input-daterange">
                            @Html.LabelFor(model => model.ArrivalDate,
                           new
                           {
                               htmlattributes = new
                               {
                                   @class = "ml-3 form-control-placeholder",
                                   id = "start-p",
                                   @for = "start"
                               }
                           })
                            <input type="text" id="start" class="form-control text-center" name="ArrivalDate" value="@Model.ArrivalDate.ToString("yyyy-MM-dd")" required readonly>
                            <span class="fa fa-calendar" id="fa-1"></span>
                            @Html.LabelFor(model => model.DepartureDate,
                           new
                           {
                               htmlattributes = new
                               {
                                   @class = "ml-3 form-control-placeholder",
                                   id = "end-p",
                                   @for = "end"
                               },
                               @style = "margin-top: 10px"
                           })
                            <input type="text" id="end" class="form-control text-center" name="DepartureDate" value="@Model.DepartureDate.ToString("yyyy-MM-dd")" required readonly>
                            <span class="fa fa-calendar" id="fa-2"></span>
                        </div>
                        @Html.LabelFor(model => model.SettledIn,
                       new { @style = "margin-top: 10px" })
                        @Html.EditorFor(model => model.SettledIn)
                        <div class="form-group">
                            <input type="submit" action="Edit" class="btn btn-primary" value="Edit"
                                   style="margin-top:15px;" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>